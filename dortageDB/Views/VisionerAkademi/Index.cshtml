@{
    ViewData["Title"] = "Vekarer Akademisi";
    Layout = "_LayoutFullWidth";
}

<!-- Font Awesome için CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Hero Section -->
<div class="akademi-hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-graduation-cap"></i>
                <span>Eğitim Platformu</span>
            </div>
            <h1 class="hero-title">VİSİONER AKADEMİSİ</h1>
            <p class="hero-subtitle">Başarılı bir Vekarer olmak için ihtiyacın olan tüm bilgi ve araçlar burada!</p>
            <p class="hero-description">
                Satış teknikleri, arsa bilgisi, müşteri ilişkileri yönetimi ve daha fazlası.
                Vekarer Akademisi ile kendini geliştir, daha fazla kazan.
            </p>
        </div>
    </div>
</div>

<!-- İstatistikler Section -->
<section class="akademi-stats-section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-video"></i>
                </div>
                <div class="stat-number">25+</div>
                <div class="stat-label">Eğitim Videosu</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="stat-number">50+</div>
                <div class="stat-label">Makale & Rehber</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-number">2000+</div>
                <div class="stat-label">Aktif Öğrenci</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-trophy"></i>
                </div>
                <div class="stat-number">%95</div>
                <div class="stat-label">Memnuniyet Oranı</div>
            </div>
        </div>
    </div>
</section>

<!-- Eğitim Kategorileri -->
<section class="egitim-kategoriler-section">
    <div class="container">
        <div class="section-header text-center">
            <h2 class="section-title">Eğitim Kategorileri</h2>
            <p class="section-subtitle">Kapsamlı eğitim programımızla her alanda uzmanlaş</p>
        </div>

        <div class="kategori-grid">
            <!-- Kategori 1 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <h3 class="kategori-title">Başlangıç Rehberi</h3>
                <p class="kategori-description">
                    Vekarer olmak için ilk adımlar, platform kullanımı ve temel bilgiler.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> Platform tanıtımı</li>
                    <li><i class="fas fa-check"></i> Referans kodu kullanımı</li>
                    <li><i class="fas fa-check"></i> İlk randevunu nasıl alırsın?</li>
                    <li><i class="fas fa-check"></i> Komisyon sistemi detayları</li>
                </ul>
                <div class="kategori-badge">4 Video</div>
            </div>

            <!-- Kategori 2 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-handshake"></i>
                </div>
                <h3 class="kategori-title">Satış Teknikleri</h3>
                <p class="kategori-description">
                    Müşteri ile etkili iletişim kurma, ikna teknikleri ve kapanış stratejileri.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> Etkili iletişim kurma</li>
                    <li><i class="fas fa-check"></i> İtiraz yönetimi</li>
                    <li><i class="fas fa-check"></i> Satış kapanış teknikleri</li>
                    <li><i class="fas fa-check"></i> Telefon görüşmesi ipuçları</li>
                </ul>
                <div class="kategori-badge">6 Video</div>
            </div>

            <!-- Kategori 3 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h3 class="kategori-title">Arsa & Emlak Bilgisi</h3>
                <p class="kategori-description">
                    İmar durumu, tapu türleri, arsa özellikleri ve değerlendirme kriterleri.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> İmar planları okuma</li>
                    <li><i class="fas fa-check"></i> Tapu türleri ve özellikleri</li>
                    <li><i class="fas fa-check"></i> Arsa değerleme kriterleri</li>
                    <li><i class="fas fa-check"></i> Yatırım potansiyeli analizi</li>
                </ul>
                <div class="kategori-badge">5 Video</div>
            </div>

            <!-- Kategori 4 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h3 class="kategori-title">Müşteri İlişkileri</h3>
                <p class="kategori-description">
                    Uzun vadeli müşteri ilişkileri kurma, takip ve sadakat oluşturma.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> İlk izlenim oluşturma</li>
                    <li><i class="fas fa-check"></i> Müşteri takip sistemi</li>
                    <li><i class="fas fa-check"></i> Güven inşa etme</li>
                    <li><i class="fas fa-check"></i> Referans alma teknikleri</li>
                </ul>
                <div class="kategori-badge">4 Video</div>
            </div>

            <!-- Kategori 5 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 class="kategori-title">Dijital Pazarlama</h3>
                <p class="kategori-description">
                    Sosyal medya kullanımı, online varlık oluşturma ve dijital araçlar.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> Sosyal medya stratejileri</li>
                    <li><i class="fas fa-check"></i> İçerik oluşturma ipuçları</li>
                    <li><i class="fas fa-check"></i> Online marka imajı</li>
                    <li><i class="fas fa-check"></i> WhatsApp Business kullanımı</li>
                </ul>
                <div class="kategori-badge">3 Video</div>
            </div>

            <!-- Kategori 6 -->
            <div class="kategori-card">
                <div class="kategori-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3 class="kategori-title">Başarı Hikayeleri</h3>
                <p class="kategori-description">
                    En başarılı Visionerların deneyimleri, ipuçları ve motivasyon hikayeleri.
                </p>
                <ul class="kategori-topics">
                    <li><i class="fas fa-check"></i> Ayın Visionerı röportajları</li>
                    <li><i class="fas fa-check"></i> İlk satışını yapanlar</li>
                    <li><i class="fas fa-check"></i> En çok kazananların sırları</li>
                    <li><i class="fas fa-check"></i> Motivasyon hikayeleri</li>
                </ul>
                <div class="kategori-badge">3 Video</div>
            </div>
        </div>
    </div>
</section>

<!-- Öne Çıkan Eğitimler -->
<section class="populer-egitimler-section">
    <div class="container">
        <div class="section-header text-center">
            <h2 class="section-title">Öne Çıkan Eğitimler</h2>
            <p class="section-subtitle">En çok izlenen ve favori eklenen eğitim içerikleri</p>
        </div>

        <div class="egitim-grid">
            <div class="egitim-card">
                <div class="egitim-thumbnail">
                    <img src="https://via.placeholder.com/400x250/000a68/ffffff?text=İlk+Satışını+Nasıl+Yaparsın" alt="İlk Satış">
                    <div class="egitim-duration">
                        <i class="fas fa-play-circle"></i> 12:45
                    </div>
                    <div class="egitim-badge-popular">Popüler</div>
                </div>
                <div class="egitim-content">
                    <div class="egitim-category">Başlangıç Rehberi</div>
                    <h4 class="egitim-title">İlk Satışını Nasıl Yaparsın?</h4>
                    <p class="egitim-description">
                        Vekarer olarak ilk satışını gerçekleştirmek için adım adım rehber.
                    </p>
                    <div class="egitim-meta">
                        <span><i class="fas fa-eye"></i> 2.5K görüntülenme</span>
                        <span><i class="fas fa-heart"></i> 458</span>
                    </div>
                </div>
            </div>

            <div class="egitim-card">
                <div class="egitim-thumbnail">
                    <img src="https://via.placeholder.com/400x250/000a68/ffffff?text=Etkili+İletişim" alt="Etkili İletişim">
                    <div class="egitim-duration">
                        <i class="fas fa-play-circle"></i> 18:30
                    </div>
                    <div class="egitim-badge-new">Yeni</div>
                </div>
                <div class="egitim-content">
                    <div class="egitim-category">Satış Teknikleri</div>
                    <h4 class="egitim-title">Müşteri ile Etkili İletişim</h4>
                    <p class="egitim-description">
                        Müşterilerle güçlü bağlar kurmak için iletişim stratejileri.
                    </p>
                    <div class="egitim-meta">
                        <span><i class="fas fa-eye"></i> 1.8K görüntülenme</span>
                        <span><i class="fas fa-heart"></i> 342</span>
                    </div>
                </div>
            </div>

            <div class="egitim-card">
                <div class="egitim-thumbnail">
                    <img src="https://via.placeholder.com/400x250/000a68/ffffff?text=İmar+Planı" alt="İmar Planı">
                    <div class="egitim-duration">
                        <i class="fas fa-play-circle"></i> 15:20
                    </div>
                </div>
                <div class="egitim-content">
                    <div class="egitim-category">Arsa & Emlak Bilgisi</div>
                    <h4 class="egitim-title">İmar Planlarını Okuma</h4>
                    <p class="egitim-description">
                        İmar planlarını nasıl okuyacağınızı ve yorumlayacağınızı öğrenin.
                    </p>
                    <div class="egitim-meta">
                        <span><i class="fas fa-eye"></i> 3.2K görüntülenme</span>
                        <span><i class="fas fa-heart"></i> 521</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Neden Akademi Section -->
<section class="neden-akademi-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="neden-content">
                    <h2 class="section-title">Neden Vekarer Akademisi?</h2>
                    <p class="neden-description">
                        Vekarer Akademisi, başarılı bir arsa satış danışmanı olmanız için gereken tüm bilgi ve becerileri kazanmanızı sağlar.
                    </p>
                    <div class="neden-list">
                        <div class="neden-item">
                            <div class="neden-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="neden-text">
                                <h4>Uzman Eğitmenler</h4>
                                <p>Sektörün en deneyimli isimlerinden öğrenin</p>
                            </div>
                        </div>
                        <div class="neden-item">
                            <div class="neden-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="neden-text">
                                <h4>Pratik Bilgiler</h4>
                                <p>Teoriden çok, uygulamaya dönük içerikler</p>
                            </div>
                        </div>
                        <div class="neden-item">
                            <div class="neden-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="neden-text">
                                <h4>Sürekli Güncelleme</h4>
                                <p>Her hafta yeni içerikler ekleniyor</p>
                            </div>
                        </div>
                        <div class="neden-item">
                            <div class="neden-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="neden-text">
                                <h4>Topluluk Desteği</h4>
                                <p>2000+ Vekarer ile deneyim paylaşımı</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="neden-image">
                    <img src="https://via.placeholder.com/600x500/000a68/ffffff?text=Vekarer+Akademisi" alt="Akademi">
                    <div class="image-badge">
                        <div class="badge-content">
                            <i class="fas fa-award"></i>
                            <span>Sertifikalı Eğitim</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="akademi-cta-section">
    <div class="container">
        <div class="cta-box text-center">
            <i class="fas fa-graduation-cap cta-icon"></i>
            <h2 class="cta-title">Eğitime Başlamaya Hazır mısın?</h2>
            <p class="cta-description">
                Vekarer Akademisi'ne katıl, kendini geliştir ve kazancını artır!
            </p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="#egitimler" class="btn btn-cta-large">
                    <i class="fas fa-play-circle"></i>
                    Eğitimlere Başla
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-cta-large">
                    <i class="fas fa-user-plus"></i>
                    Üye Ol, Eğitime Başla
                </a>
            }
            <p class="cta-note">Tüm eğitimler ücretsiz ve Visionerlara özel!</p>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="~/css/vekarer-akademi.css" asp-append-version="true" />
}

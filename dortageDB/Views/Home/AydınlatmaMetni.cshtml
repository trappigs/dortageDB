@{
    ViewData["Title"] = "Aydınlatma Metni";
    ViewData["MetaDescription"] = "Vekarer kişisel verilerin işlenmesine ilişkin aydınlatma metni.";
}

<div class="container" style="padding-top: 120px; padding-bottom: 3rem;">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold text-dark">Aydınlatma Metni</h1>
                <p class="text-muted">Kişisel Verilerin İşlenmesine İlişkin Aydınlatma Metni</p>
                @if (!string.IsNullOrEmpty(ViewBag.PdfPath))
                {
                    <div class="mt-3">
                        <a href="@ViewBag.PdfPath"
                           class="btn btn-primary"
                           download="vekarer-aydinlatma-metni.pdf">
                            <i class="bi bi-download me-2"></i>PDF İndir
                        </a>
                    </div>
                }
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    @if (!string.IsNullOrEmpty(ViewBag.PdfPath))
                    {
                        <div class="pdf-container" style="position: relative; width: 100%; height: 800px;">
                            <iframe
                                src="@ViewBag.PdfPath"
                                style="width: 100%; height: 100%; border: none;"
                                title="Aydınlatma Metni Belgesi">
                            </iframe>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning m-4" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Aydınlatma metni belgesi yüklenmemiştir.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .pdf-container {
        background: #f8f9fa;
        border-radius: 8px;
        overflow: hidden;
    }

    @@media (max-width: 768px) {
        .pdf-container {
            height: 600px;
        }
    }
</style>

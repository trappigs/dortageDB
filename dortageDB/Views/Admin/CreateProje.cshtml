<script>
    // Galeri görselleri dizisi
    let galleryImages = [];

    // Sayfa yüklendiğinde mevcut görselleri yükle
    document.addEventListener('DOMContentLoaded', function() {
        renderGallery();
    });

    // Galeri görsellerini render et
    function renderGallery() {
        const preview = document.getElementById('galleryPreview');
        const imageCount = document.getElementById('imageCount');

        if (galleryImages.length === 0) {
            preview.innerHTML = '<div class="gallery-empty">Henüz görsel eklenmemiş</div>';
        } else {
            preview.innerHTML = galleryImages.map((url, index) => `
                <div class="gallery-item" data-index="${index}">
                    <div class="gallery-item-image">
                        <img src="${url}" alt="Görsel ${index + 1}" onerror="this.src='/images/placeholder.jpg'">
                    </div>
                    <div class="gallery-item-actions">
                        <button type="button" class="btn btn-sm btn-danger" onclick="removeGalleryImage(${index})" title="Sil">
                            <i class="bi bi-trash"></i>
                        </button>
                        ${index > 0 ? `<button type="button" class="btn btn-sm btn-secondary" onclick="moveGalleryImage(${index}, ${index - 1})" title="Yukarı Taşı">
                            <i class="bi bi-arrow-up"></i>
                        </button>` : ''}
                        ${index < galleryImages.length - 1 ? `<button type="button" class="btn btn-sm btn-secondary" onclick="moveGalleryImage(${index}, ${index + 1})" title="Aşağı Taşı">
                            <i class="bi bi-arrow-down"></i>
                        </button>` : ''}
                    </div>
                    <div class="gallery-item-index">${index + 1}</div>
                </div>
            `).join('');
        }

        imageCount.textContent = galleryImages.length;
        updateHiddenInput();
    }

    // Yeni görsel ekle
    function addGalleryImage() {
        const input = document.getElementById('newImageUrl');
        const url = input.value.trim();

        if (!url) {
            alert('Lütfen bir görsel URL\'si girin!');
            return;
        }

        if (!url.startsWith('http://') && !url.startsWith('https://')) {
            alert('Geçerli bir URL girin (http:// veya https:// ile başlamalı)');
            return;
        }

        if (galleryImages.length >= 50) {
            alert('Maksimum 50 görsel ekleyebilirsiniz!');
            return;
        }

        if (galleryImages.includes(url)) {
            alert('Bu görsel zaten eklenmiş!');
            return;
        }

        galleryImages.push(url);
        input.value = '';
        renderGallery();
    }

    // Görsel sil
    function removeGalleryImage(index) {
        if (confirm('Bu görseli silmek istediğinizden emin misiniz?')) {
            galleryImages.splice(index, 1);
            renderGallery();
        }
    }

    // Görsel sırasını değiştir
    function moveGalleryImage(fromIndex, toIndex) {
        const temp = galleryImages[fromIndex];
        galleryImages[fromIndex] = galleryImages[toIndex];
        galleryImages[toIndex] = temp;
        renderGallery();
    }

    // Hidden input'u güncelle
    function updateHiddenInput() {
        document.getElementById('galeriGorselleriInput').value = JSON.stringify(galleryImages);
    }

    // Enter tuşu ile görsel ekleme
    document.getElementById('newImageUrl').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            addGalleryImageFromUrl();
        }
    });

    // ===================================
    // DOSYA YÜKLEME FONKSİYONLARI
    // ===================================

    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('fileInput');
    const uploadProgress = document.getElementById('uploadProgress');
    const uploadProgressBar = document.getElementById('uploadProgressBar');
    const uploadProgressText = document.getElementById('uploadProgressText');

    // Dosya input değişikliği
    fileInput.addEventListener('change', function(e) {
        handleFiles(e.target.files);
    });

    // Upload area'ya tıklama
    uploadArea.addEventListener('click', function() {
        fileInput.click();
    });

    // Drag & Drop events
    uploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        e.stopPropagation();
        uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        e.stopPropagation();
        uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        e.stopPropagation();
        uploadArea.classList.remove('dragover');

        const files = e.dataTransfer.files;
        handleFiles(files);
    });

    // Dosyaları işle
    async function handleFiles(files) {
        if (files.length === 0) return;

        // Maksimum dosya kontrolü
        if (galleryImages.length + files.length > 50) {
            alert('Maksimum 50 görsel ekleyebilirsiniz!');
            return;
        }

        uploadProgress.style.display = 'block';
        const totalFiles = files.length;
        let uploadedFiles = 0;

        for (let i = 0; i < files.length; i++) {
            const file = files[i];

            // Dosya boyutu kontrolü
            if (file.size > 5 * 1024 * 1024) {
                alert(`${file.name} dosyası 5MB'dan büyük!`);
                continue;
            }

            // Dosya türü kontrolü
            if (!file.type.startsWith('image/')) {
                alert(`${file.name} bir resim dosyası değil!`);
                continue;
            }

            try {
                uploadProgressText.textContent = `${uploadedFiles + 1} / ${totalFiles} dosya yükleniyor...`;
                uploadProgressBar.style.width = `${((uploadedFiles) / totalFiles) * 100}%`;

                const formData = new FormData();
                formData.append('file', file);

                const response = await fetch('/Admin/UploadGalleryImage', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    galleryImages.push(result.url);
                    uploadedFiles++;
                } else {
                    alert(`${file.name} yüklenemedi: ${result.message}`);
                }
            } catch (error) {
                console.error('Upload error:', error);
                alert(`${file.name} yüklenirken bir hata oluştu!`);
            }
        }

        uploadProgressBar.style.width = '100%';
        uploadProgressText.textContent = `${uploadedFiles} dosya başarıyla yüklendi!`;

        setTimeout(() => {
            uploadProgress.style.display = 'none';
            uploadProgressBar.style.width = '0%';
            fileInput.value = '';
        }, 2000);

        renderGallery();
    }

    // URL ile görsel ekleme (yeni isim)
    function addGalleryImageFromUrl() {
        const input = document.getElementById('newImageUrl');
        const url = input.value.trim();

        if (!url) {
            alert('Lütfen bir görsel URL\'si girin!');
            return;
        }

        if (!url.startsWith('http://') && !url.startsWith('https://')) {
            alert('Geçerli bir URL girin (http:// veya https:// ile başlamalı)');
            return;
        }

        if (galleryImages.length >= 50) {
            alert('Maksimum 50 görsel ekleyebilirsiniz!');
            return;
        }

        if (galleryImages.includes(url)) {
            alert('Bu görsel zaten eklenmiş!');
            return;
        }

        galleryImages.push(url);
        input.value = '';
        renderGallery();
    }

    // Görsel silme fonksiyonunu güncelle
    async function removeGalleryImage(index) {
        if (!confirm('Bu görseli silmek istediğinizden emin misiniz?')) {
            return;
        }

        const imageUrl = galleryImages[index];

        // Eğer yüklenen bir dosyaysa, sunucudan da sil
        if (imageUrl.startsWith('/uploads/projeler/')) {
            try {
                const formData = new FormData();
                formData.append('imageUrl', imageUrl);

                await fetch('/Admin/DeleteGalleryImage', {
                    method: 'POST',
                    body: formData
                });
            } catch (error) {
                console.error('Delete error:', error);
            }
        }

        galleryImages.splice(index, 1);
        renderGallery();
    }

    // 360 Tur Seçimi
    function updateTour360Url() {
        const select = document.getElementById('tour360Select');
        const input = document.getElementById('Tour360Url');
        if (select.value) {
            input.value = select.value;
        }
    }

    // Sayfa yüklendiğinde mevcut sunum varsa göster
    document.addEventListener('DOMContentLoaded', function() {
        const currentSunumUrl = document.getElementById('sunumDosyaUrlInput').value;
        if (currentSunumUrl) {
            const fileName = currentSunumUrl.split('/').pop();
            document.getElementById('sunumPreview').style.display = 'block';
            document.getElementById('sunumFileName').textContent = fileName || 'Mevcut Sunum';
        }
    });

    // ===================================
    // SUNUM DOSYASI YÜKLEME FONKSİYONLARI
    // ===================================

    const sunumFileInput = document.getElementById('sunumFileInput');
    const sunumUploadProgress = document.getElementById('sunumUploadProgress');
    const sunumProgressBar = document.getElementById('sunumProgressBar');
    const sunumProgressText = document.getElementById('sunumProgressText');
    const sunumPreview = document.getElementById('sunumPreview');
    const sunumFileName = document.getElementById('sunumFileName');
    const sunumDosyaUrlInput = document.getElementById('sunumDosyaUrlInput');

    sunumFileInput.addEventListener('change', async function(e) {
        const file = e.target.files[0];
        if (!file) return;

        // Dosya boyutu kontrolü (10MB)
        if (file.size > 10 * 1024 * 1024) {
            alert('Dosya boyutu 10MB\'dan büyük olamaz!');
            sunumFileInput.value = '';
            return;
        }

        // Dosya türü kontrolü
        const allowedTypes = ['application/pdf', 'application/vnd.ms-powerpoint', 'application/vnd.openxmlformats-officedocument.presentationml.presentation'];
        if (!allowedTypes.includes(file.type)) {
            alert('Sadece PDF veya PowerPoint dosyası yükleyebilirsiniz!');
            sunumFileInput.value = '';
            return;
        }

        // Upload işlemi
        try {
            sunumUploadProgress.style.display = 'block';
            sunumProgressText.textContent = 'Dosya yükleniyor...';
            sunumProgressBar.style.width = '50%';

            const formData = new FormData();
            formData.append('file', file);

            const response = await fetch('/Admin/UploadSunum', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                sunumProgressBar.style.width = '100%';
                sunumProgressText.textContent = 'Dosya başarıyla yüklendi!';

                // Hidden input'a URL'yi kaydet
                sunumDosyaUrlInput.value = result.url;

                // Preview göster
                setTimeout(() => {
                    sunumUploadProgress.style.display = 'none';
                    sunumPreview.style.display = 'block';
                    sunumFileName.textContent = file.name;
                    sunumProgressBar.style.width = '0%';
                }, 1000);
            } else {
                alert('Dosya yüklenirken bir hata oluştu: ' + result.message);
                sunumUploadProgress.style.display = 'none';
                sunumFileInput.value = '';
            }
        } catch (error) {
            console.error('Upload error:', error);
            alert('Dosya yüklenirken bir hata oluştu!');
            sunumUploadProgress.style.display = 'none';
            sunumFileInput.value = '';
        }
    });

    function removeSunum() {
        if (!confirm('Sunumu kaldırmak istediğinizden emin misiniz?')) {
            return;
        }

        const sunumUrl = sunumDosyaUrlInput.value;

        // Sunucudan dosyayı sil
        if (sunumUrl) {
            const formData = new FormData();
            formData.append('fileUrl', sunumUrl);

            fetch('/Admin/DeleteSunum', {
                method: 'POST',
                body: formData
            }).catch(error => {
                console.error('Delete error:', error);
            });
        }

        // UI'ı temizle
        sunumDosyaUrlInput.value = '';
        sunumFileInput.value = '';
        sunumPreview.style.display = 'none';
        sunumFileName.textContent = '';
    }
</script>

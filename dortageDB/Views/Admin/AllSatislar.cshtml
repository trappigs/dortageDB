        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #000a68;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .admin-badge {

    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: #f9fafb;
    }

    th {
        padding: 16px;
        text-align: left;
        font-size: 14px;
        font-weight: 600;
        color: #374151;
        border-bottom: 1px solid #e5e7eb;
        cursor: pointer;
        user-select: none;
    }

        th:hover {
            background: #f3f4f6;
        }

    td {
        padding: 16px;
        font-size: 14px;
        color: #6b7280;
        border-bottom: 1px solid #f3f4f6;
    }

    tr:hover {
        background: #f9fafb;
    }

    .amount {
        font-weight: 700;
        color: #000a68;
    }

    .commission {
        font-weight: 600;
        color: #10b981;
    }

    .taksit-badge {
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 600;

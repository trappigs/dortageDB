@model IEnumerable<dortageDB.Entities.Proje>
@{
    ViewData["Title"] = "Proje Yönetimi";
    Layout = "_LayoutTopraktar";
}

<link rel="stylesheet" href="~/css/topraktar-main-panel.css" asp-append-version="true" />

<div class="topraktar-main-panel">
    <div class="main-content">
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Proje Yönetimi</h1>
        <a asp-action="CreateProje" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Proje Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-building me-2"></i>
            Tüm Projeler (@Model.Count())
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Proje Adı</th>
                            <th>Yatırım Türü</th>
                            <th>Konum</th>
                            <th>Fiyat Aralığı</th>
                            <th>Parsel Durumu</th>
                            <th>Durum</th>
                            <th>Öncelik</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proje in Model)
                        {
                            var satisYuzdesi = proje.ToplamParsel > 0 ? (double)proje.SatilanParsel / proje.ToplamParsel * 100 : 0;
                            <tr>
                                <td>@proje.ProjeID</td>
                                <td>
                                    <strong>@proje.ProjeAdi</strong>
                                    @if (!string.IsNullOrEmpty(proje.KapakGorseli))
                                    {
                                        <br><small class="text-muted">✓ Görsel var</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(proje.YatirimTuru == "Arsa" ? "success" : "info")">
                                        @proje.YatirimTuru
                                    </span>
                                </td>
                                <td>
                                    @proje.Sehir, @proje.Ilce
                                    <br><small class="text-muted">@proje.Konum</small>
                                </td>
                                <td>
                                    @if (proje.MinFiyat == proje.MaxFiyat)
                                    {
                                        <span>@proje.MinFiyat.ToString("N0") ₺</span>
                                    }
                                    else
                                    {
                                        <span>@proje.MinFiyat.ToString("N0") ₺ - @proje.MaxFiyat.ToString("N0") ₺</span>
                                    }
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-@(satisYuzdesi >= 75 ? "danger" : satisYuzdesi >= 50 ? "warning" : "success")"
                                             role="progressbar"
                                             style="width: @satisYuzdesi%"
                                             aria-valuenow="@satisYuzdesi"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @Math.Round(satisYuzdesi, 0)%
                                        </div>
                                    </div>
                                    <small class="text-muted">@proje.SatilanParsel / @proje.ToplamParsel</small>
                                </td>
                                <td>
                                    @if (proje.AktifMi)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-primary">@proje.Oncelik</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="DetailsProje" asp-route-id="@proje.ProjeID"
                                           class="btn btn-sm btn-info" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditProje" asp-route-id="@proje.ProjeID"
                                           class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteProje" asp-route-id="@proje.ProjeID"
                                           class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

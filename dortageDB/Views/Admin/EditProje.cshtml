                        <!-- Yakınlık Bilgileri Section -->
                        <div class="card mb-3" style="border: 2px solid #000a68;">
                            <div class="card-header" style="background-color: #000a68; color: white;">
                                <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Yakınlık Bilgileri</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="YakinBolgeler" class="form-label">Yakınındaki Önemli Bölgeler</label>

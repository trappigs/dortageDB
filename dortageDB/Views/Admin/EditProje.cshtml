                            <div class="card-header" style="background-color: #f59e0b; color: white;">
                                <h5 class="mb-0"><i class="bi bi-file-earmark-arrow-down"></i> Proje Sunumu</h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.SunumDosyaUrl))
                                {
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle"></i> Mevcut sunum:
                                        <a href="@Model.SunumDosyaUrl" target="_blank" class="alert-link">Sunumu Görüntüle</a>
                                    </div>
                                }

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProjeAdi" class="form-label">Proje Adı *</label>
                                <input asp-for="ProjeAdi" class="form-control" id="projeAdiInput" required />
                            </div>
                            <div class="col-md-3">

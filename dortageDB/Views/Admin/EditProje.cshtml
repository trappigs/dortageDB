                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Sehir" class="form-label">Şehir</label>
                                <input asp-for="Sehir" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Ilce" class="form-label">İlçe</label>
                                <input asp-for="Ilce" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Konum" class="form-label">Konum *</label>

            return;
        }

        const sunumUrl = sunumDosyaUrlInput.value;

        // Sunucudan dosyayı sil
        if (sunumUrl) {
            const formData = new FormData();
            formData.append('fileUrl', sunumUrl);

            fetch('/Admin/DeleteSunum', {
                method: 'POST',
                body: formData
            }).catch(error => {
                console.error('Delete error:', error);
            });
        }

        // UI'ı temizle
        sunumDosyaUrlInput.value = '';
        sunumFileInput.value = '';
        sunumPreview.style.display = 'none';
        sunumFileName.textContent = '';
    }

    // Slug otomatik oluşturma
    const projeAdiInput = document.getElementById('projeAdiInput');
    const slugInput = document.getElementById('slugInput');
    let manualSlugEdit = slugInput && slugInput.value.length > 0; // Mevcut slug varsa manuel düzenleme olarak işaretle

    function generateSlug(text) {
        if (!text) return '';

        // Türkçe karakterleri dönüştür
        let slug = text.toLowerCase();
        slug = slug.replace(/İ/g, 'i').replace(/ı/g, 'i');
        slug = slug.replace(/Ğ/g, 'g').replace(/ğ/g, 'g');
        slug = slug.replace(/Ü/g, 'u').replace(/ü/g, 'u');
        slug = slug.replace(/Ş/g, 's').replace(/ş/g, 's');
        slug = slug.replace(/Ö/g, 'o').replace(/ö/g, 'o');
        slug = slug.replace(/Ç/g, 'c').replace(/ç/g, 'c');

        // Geçersiz karakterleri temizle ve boşlukları tire ile değiştir
        slug = slug.replace(/[^a-z0-9\s-]/g, '');
        slug = slug.replace(/\s+/g, '-');
        slug = slug.replace(/-+/g, '-');
        slug = slug.trim('-');

        return slug;
    }

    if (projeAdiInput && slugInput) {
        // Proje adı değiştiğinde slug'ı otomatik güncelle (sadece manuel düzenleme yapılmadıysa)
        projeAdiInput.addEventListener('input', function() {
            if (!manualSlugEdit) {
                slugInput.value = generateSlug(this.value);
            }
        });

        // Slug manuel olarak düzenlendiyse otomatik güncellemeyi durdur
        slugInput.addEventListener('input', function() {
            manualSlugEdit = this.value.length > 0;
        });
    }

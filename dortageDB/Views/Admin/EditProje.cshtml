    // ===================================
    // DOSYA YÜKLEME FONKSİYONLARI
    // ===================================

    // DOMContentLoaded içinde başlat
    document.addEventListener('DOMContentLoaded', function() {
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const uploadProgress = document.getElementById('uploadProgress');
        const uploadProgressBar = document.getElementById('uploadProgressBar');
        const uploadProgressText = document.getElementById('uploadProgressText');

        // Elementlerin var olup olmadığını kontrol et
        if (!uploadArea || !fileInput) {
            console.error('Upload elementleri bulunamadı!');
            return;
        }

        // Dosya input değişikliği
        fileInput.addEventListener('change', function(e) {
            const files = e.target.files;
            if (files && files.length > 0) {
                handleFiles(files);
            }
        }, { once: false });

        // Upload area'ya tıklama (buton hariç)
        uploadArea.addEventListener('click', function(e) {
            // Eğer tıklanan öğe button veya button içinde bir öğeyse, button'ın kendi davranışını kullan
            if (e.target.tagName === 'BUTTON' || e.target.closest('button')) {
                // Button zaten file input'u tetikleyecek, hiçbir şey yapma
                return;
            }
            // Diğer alanlara tıklanırsa da file input'u tetikle
            if (fileInput) {
                fileInput.click();
            }
        });

        // Drag & Drop events
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadArea.classList.remove('dragover');

            const files = e.dataTransfer.files;
            handleFiles(files);
        });
    });

    // Dosyaları işle
    async function handleFiles(files) {
        if (!files || files.length === 0) return;

        // Maksimum dosya kontrolü
        if (galleryImages.length + files.length > 50) {
            alert('Maksimum 50 görsel ekleyebilirsiniz!');
            fileInput.value = '';
            return;
        }

        uploadProgress.style.display = 'block';
        const totalFiles = files.length;
        let uploadedFiles = 0;

        for (let i = 0; i < files.length; i++) {
            const file = files[i];

            // Dosya boyutu kontrolü
            if (file.size > 5 * 1024 * 1024) {
                alert(`${file.name} dosyası 5MB'dan büyük!`);
                continue;
            }

            // Dosya türü kontrolü
            if (!file.type.startsWith('image/')) {
                alert(`${file.name} bir resim dosyası değil!`);
                continue;
            }

            try {
                uploadProgressText.textContent = `${uploadedFiles + 1} / ${totalFiles} dosya yükleniyor...`;
                uploadProgressBar.style.width = `${((uploadedFiles) / totalFiles) * 100}%`;

                const formData = new FormData();
                formData.append('file', file);

                const response = await fetch('/Admin/UploadGalleryImage', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error(`HTTP Error: ${response.status}`);
                }

                const result = await response.json();

                if (result.success) {
                    galleryImages.push(result.url);
                    uploadedFiles++;
                } else {
                    const errorMsg = result.message || 'Bilinmeyen hata oluştu';
                    alert(`${file.name} yüklenemedi: ${errorMsg}`);
                    console.error('Upload failed:', result);
                }
            } catch (error) {
                console.error('Upload error for file:', file.name, error);
                alert(`${file.name} yüklenirken bir hata oluştu: ${error.message}`);
            }
        }

        uploadProgressBar.style.width = '100%';
        uploadProgressText.textContent = `${uploadedFiles} dosya başarıyla yüklendi!`;

        // File input'u hemen reset et
        fileInput.value = '';

        setTimeout(() => {
            uploadProgress.style.display = 'none';
            uploadProgressBar.style.width = '0%';
        }, 2000);

        renderGallery();
    }


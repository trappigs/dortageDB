                                    <label class="form-label">Sunum Dosyası Yükle</label>
                                    <input type="file" id="sunumFileInput" class="form-control" accept=".pdf,.ppt,.pptx" />
                                    <small class="text-muted">
                                        PDF veya PowerPoint dosyası yükleyebilirsiniz (Maksimum 10MB)
                                    </small>
                                </div>
                                <div id="sunumUploadProgress" style="display: none;" class="mb-3">
                                    <div class="progress">
                                        <div id="sunumProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <p id="sunumProgressText" class="text-center mt-2 mb-0"></p>
                                </div>
                                <div id="sunumPreview" style="display: none;" class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> <span id="sunumFileName"></span>
                                    <button type="button" class="btn btn-sm btn-danger float-end" onclick="removeSunum()">
                                        <i class="bi bi-trash"></i> Kaldır
                                    </button>
                                </div>
                                <input type="hidden" asp-for="SunumDosyaUrl" id="sunumDosyaUrlInput" />
                            </div>

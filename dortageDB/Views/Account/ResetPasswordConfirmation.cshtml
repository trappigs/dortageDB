@* Views/Account/ResetPasswordConfirmation.cshtml *@
@{
    ViewData["Title"] = "Şifre Sıfırlandı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h3 class="mb-3">Şifre Başarıyla Sıfırlandı</h3>

                    <p class="text-muted mb-4">
                        Şifreniz başarıyla değiştirildi. Artık yeni şifreniz ile giriş yapabilirsiniz.
                    </p>

                    <div class="d-grid">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
</style>
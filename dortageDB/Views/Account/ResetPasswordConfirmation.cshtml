@* Views/Account/ResetPasswordConfirmation.cshtml *@
@{
    ViewData["Title"] = "Şifre Sıfırlandı";
}


<div class="auth-pages">
    <link rel="stylesheet" href="~/css/auth-pages.css" asp-append-version="true" />

    <div class="auth-container">
        <div class="auth-confirmation success-page">
            <div class="confirmation-content">
                <!-- Success Animation -->
                <div class="success-animation">
                    <div class="success-icon">
                        <svg class="checkmark" viewBox="0 0 52 52">
                            <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                            <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                        </svg>
                    </div>
                </div>

                <h1 class="confirmation-title">Şifreniz Başarıyla Değiştirildi! 🎉</h1>
                <p class="confirmation-text">
                    Artık yeni şifreniz ile giriş yapabilirsiniz.
                    Hesabınız güvende ve hazır.
                </p>

                <div class="success-stats">
                    <div class="stat-item">
                        <div class="stat-icon">✅</div>
                        <div class="stat-text">Şifre güncellendi</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">🔒</div>
                        <div class="stat-text">Hesap güvenliği artırıldı</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">⚡</div>
                        <div class="stat-text">Hemen giriş yapabilirsiniz</div>
                    </div>
                </div>

                <div class="confirmation-actions">
                    <a asp-action="Login" asp-controller="Account" class="btn-primary btn-large">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
                            <polyline points="10 17 15 12 10 7" />
                            <line x1="15" y1="12" x2="3" y2="12" />
                        </svg>
                        Giriş Yap
                    </a>
                </div>

                <div class="security-tips">
                    <h3 class="tips-title">🛡️ Güvenlik Önerileri:</h3>
                    <ul class="tips-list">
                        <li>Şifrenizi düzenli olarak değiştirin</li>
                        <li>Şifrenizi kimseyle paylaşmayın</li>
                        <li>Farklı hesaplar için farklı şifreler kullanın</li>
                        <li>İki faktörlü kimlik doğrulamayı etkinleştirin</li>
                    </ul>
                </div>

                <div class="help-section small">
                    <p>
                        Hesabınızla ilgili bir sorun mu var?
                        <a href="/iletisim">Destek ekibi ile iletişime geçin</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        // Confetti animation (optional)
        setTimeout(() => {
            window.location.href = '@Url.Action("Login", "Account")';
        }, 5000); // 5 saniye sonra otomatik yönlendirme
    </script>
@* Views/Account/ForgotPasswordConfirmation.cshtml *@
@{
    ViewData["Title"] = "Şifre Sıfırlama Linki Gönderildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h3 class="mb-3">E-posta Gönderildi</h3>

                    <p class="text-muted mb-4">
                        Eğer e-posta adresiniz kayıtlı ise, şifre sıfırlama linki gönderildi.
                        Lütfen e-posta kutunuzu kontrol edin.
                    </p>

                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @TempData["InfoMessage"]
                        </div>
                    }

                    <div class="alert alert-info">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Not:</strong> E-posta gelmedi mi? Spam klasörünü kontrol edin.
                        </small>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Sayfasına Dön
                        </a>
                        <a asp-action="ForgotPassword" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise me-2"></i>Tekrar Dene
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
</style>
@* Views/Account/ForgotPasswordConfirmation.cshtml *@
@{
    ViewData["Title"] = "E-posta Gönderildi";
}
<div class="auth-pages">

    <div class="auth-container">
        <div class="auth-confirmation">
            <div class="confirmation-content">
                <!-- Success Animation -->
                <div class="success-animation">
                    <svg class="checkmark" viewBox="0 0 52 52">
                        <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                        <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                    </svg>
                </div>

                <h1 class="confirmation-title">E-posta Gönderildi! ✉️</h1>
                <p class="confirmation-text">
                    Şifre sıfırlama talimatları e-posta adresinize gönderildi.
                    Lütfen gelen kutunuzu kontrol edin.
                </p>

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10" />
                            <line x1="12" y1="16" x2="12" y2="12" />
                            <line x1="12" y1="8" x2="12.01" y2="8" />
                        </svg>
                        @TempData["InfoMessage"]
                    </div>
                }

                <div class="info-cards">
                    <div class="info-card">
                        <div class="info-icon">⏰</div>
                        <h3>Birkaç dakika içinde</h3>
                        <p>E-posta genellikle 2-5 dakika içinde gelir</p>
                    </div>
                    <div class="info-card">
                        <div class="info-icon">📧</div>
                        <h3>Spam klasörü</h3>
                        <p>E-posta gelmediyse spam klasörünü kontrol edin</p>
                    </div>
                    <div class="info-card">
                        <div class="info-icon">⏳</div>
                        <h3>24 saat geçerli</h3>
                        <p>Bağlantı 24 saat sonra geçersiz olacak</p>
                    </div>
                </div>

                <div class="confirmation-actions">
                    <a asp-action="Login" asp-controller="Account" class="btn-primary">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
                            <polyline points="10 17 15 12 10 7" />
                            <line x1="15" y1="12" x2="3" y2="12" />
                        </svg>
                        Giriş Sayfasına Dön
                    </a>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="btn-secondary">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="1 4 1 10 7 10" />
                            <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10" />
                        </svg>
                        Tekrar Gönder
                    </a>
                </div>

                <div class="help-section">
                    <h3 class="help-title">E-posta gelmedi mi?</h3>
                    <ul class="help-steps">
                        <li>
                            <span class="step-number">1</span>
                            Spam/gereksiz e-posta klasörünüzü kontrol edin
                        </li>
                        <li>
                            <span class="step-number">2</span>
                            Doğru e-posta adresini girdiğinizden emin olun
                        </li>
                        <li>
                            <span class="step-number">3</span>
                            Birkaç dakika bekleyin ve tekrar deneyin
                        </li>
                        <li>
                            <span class="step-number">4</span>
                            Sorun devam ederse <a href="/iletisim">destek ekibi</a> ile iletişime geçin
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
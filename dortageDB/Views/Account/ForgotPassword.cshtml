@* Views/Account/ForgotPassword.cshtml *@
@model ForgotPasswordVM

@{
    ViewData["Title"] = "Şifremi Unuttum";
}
<div class="auth-pages">

    <div class="auth-container">
        <!-- Left Side - Branding -->
        <div class="auth-left">
            <div class="auth-brand">
                <a href="/" class="brand-logo">DORTAGE</a>
                <h1 class="brand-title">Şifrenizi mi unuttunuz?</h1>
                <p class="brand-subtitle">
                    Endişelenmeyin, hepimizin başına gelir! E-posta adresinizi girin,
                    size şifre sıfırlama bağlantısı gönderelim.
                </p>
            </div>

            <div class="auth-features">
                <div class="feature-item">
                    <div class="feature-icon">🔒</div>
                    <div class="feature-text">
                        <h3>Güvenli Süreç</h3>
                        <p>Şifre sıfırlama bağlantısı sadece 24 saat geçerlidir</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">⚡</div>
                    <div class="feature-text">
                        <h3>Hızlı İşlem</h3>
                        <p>Birkaç dakika içinde e-postanızı alacaksınız</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">🛡️</div>
                    <div class="feature-text">
                        <h3>Güvenli Bağlantı</h3>
                        <p>Kimlik doğrulama ile korumalı sistem</p>
                    </div>
                </div>
            </div>

            <div class="auth-illustration">
                <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
                    <!-- Key illustration -->
                    <circle cx="200" cy="150" r="80" fill="rgba(0, 10, 104, 0.1)" />
                    <path d="M200 120 L200 180 M170 150 L230 150" stroke="#000a68" stroke-width="8" stroke-linecap="round" />
                    <circle cx="200" cy="150" r="15" fill="#000a68" />
                    <rect x="190" y="165" width="20" height="30" rx="3" fill="#000a68" />
                </svg>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="auth-right">
            <div class="auth-form-container">
                <!-- Back Button -->
                <a asp-action="Login" asp-controller="Account" class="back-button">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 12H5M12 19l-7-7 7-7" />
                    </svg>
                    Giriş sayfasına dön
                </a>

                <div class="auth-header">
                    <div class="auth-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                            <path d="M9 12l2 2 4-4" />
                        </svg>
                    </div>
                    <h2>Şifre Sıfırlama</h2>
                    <p class="auth-description">
                        Kayıtlı e-posta adresinizi girin, şifre sıfırlama bağlantısını göndereceğiz.
                    </p>
                </div>

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10" />
                            <line x1="12" y1="16" x2="12" y2="12" />
                            <line x1="12" y1="8" x2="12.01" y2="8" />
                        </svg>
                        @TempData["InfoMessage"]
                    </div>
                }

                <form asp-action="ForgotPassword" method="post" class="auth-form" id="forgotPasswordForm">
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="Email">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                <polyline points="22,6 12,13 2,6" />
                            </svg>
                            E-posta Adresi
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="Email"
                                   type="email"
                                   placeholder="ornek@email.com"
                                   autocomplete="email"
                                   autofocus
                                   required />
                            <div class="input-icon">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                    <polyline points="22,6 12,13 2,6" />
                                </svg>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <button type="submit" class="btn-primary" id="submitBtn">
                        <span class="btn-text">Sıfırlama Bağlantısı Gönder</span>
                        <span class="btn-loader" style="display: none;">
                            <svg class="spinner" viewBox="0 0 50 50">
                                <circle cx="25" cy="25" r="20" fill="none" stroke="currentColor" stroke-width="5" />
                            </svg>
                        </span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12" />
                            <polyline points="12 5 19 12 12 19" />
                        </svg>
                    </button>
                </form>

                <div class="auth-footer">
                    <p class="footer-text">
                        Hesabınızı hatırladınız mı?
                        <a asp-action="Login" asp-controller="Account">Giriş Yap</a>
                    </p>
                </div>

                <div class="auth-help">
                    <p class="help-title">💡 İpuçları:</p>
                    <ul class="help-list">
                        <li>Kayıt olurken kullandığınız e-posta adresini girin</li>
                        <li>E-posta gelmezse spam/gereksiz klasörünü kontrol edin</li>
                        <li>Bağlantı 24 saat geçerli olacaktır</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="~/css/auth-pages.css" asp-append-version="true" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script>
    document.getElementById('forgotPasswordForm')?.addEventListener('submit', function() {
        const btn = document.getElementById('submitBtn');
        const btnText = btn.querySelector('.btn-text');
        const btnLoader = btn.querySelector('.btn-loader');

        btn.disabled = true;
        btnText.style.display = 'none';
        btnLoader.style.display = 'inline-block';
    });
</script>
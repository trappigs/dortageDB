@* Views/Account/ForgotPassword.cshtml *@
@model ForgotPasswordVM

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0 text-center">
                        <i class="bi bi-key me-2"></i>Şifremi Unuttum
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        E-posta adresinizi girin. Size şifre sıfırlama linki göndereceğiz.
                    </div>

                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>E-posta Adresi
                            </label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control form-control-lg"
                                   placeholder="ornek@email.com"
                                   autofocus
                                   autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="bi bi-send me-2"></i>Şifre Sıfırlama Linki Gönder
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="bi bi-arrow-left me-1"></i>Giriş sayfasına dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector('input[name="Email"]').addEventListener('input', function(e) {
            this.value = this.value.toLowerCase();
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
</style>
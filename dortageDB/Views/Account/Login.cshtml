@model LoginVM

<div class="login-form">
    <div class="login-container">
        <!-- Left Section -->
        <div class="login-left-section">
            <a asp-controller="Home" asp-action="Index" class="login-logo" style="text-decoration: none;">VEKARER</a>
            <h1 class="login-headline">Toprakla Kazanmaya Başla</h1>
            <p class="login-subheadline">Vekarer'ın arasına katılın, müşteri getirin, komisyon kazanın</p>
            <ul class="login-features">
                <li class="login-feature-item">
                    <span class="login-checkmark"></span>
                    Sıfır Maliyet
                </li>
                <li class="login-feature-item">
                    <span class="login-checkmark"></span>
                    Anında Komisyon
                </li>
                <li class="login-feature-item">
                    <span class="login-checkmark"></span>
                    Esnek Çalışma
                </li>
                <li class="login-feature-item">
                    <span class="login-checkmark"></span>
                    Eğitim Desteği
                </li>
            </ul>
        </div>

        <!-- Right Section -->
        <div class="login-right-section">
            <div class="login-form-container">
                <div class="login-form-header">
                    <h2 class="login-form-title">Giriş Yap</h2>
                    <p class="login-form-subtitle">Hesabınıza giriş yapın</p>
                </div>

                <!-- Account Locked Warning -->
                <div class="login-lock-warning" id="lockWarning">
                    <div class="login-lock-header">
                        <svg class="login-icon" viewBox="0 0 24 24">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                        Hesabınız geçici olarak kilitlendi
                    </div>
                    <p class="login-lock-message">
                        Çok fazla başarısız giriş denemesi yaptınız.
                        Lütfen <span class="login-countdown" id="countdown">5:00</span> dakika bekleyin.
                    </p>
                    <a asp-controller="" asp-action="" class="login-support-link">Destek ile iletişime geçin</a>
                </div>

                <!-- Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-error" role="alert">
                        <div asp-validation-summary="All" class="text-error"></div>
                    </div>
                }

                <!-- Login Form -->
                <form asp-route="giris" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="loginForm">
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="login-form-group">
                        <label asp-for="Email">E-posta Adresi <span class="required">*</span></label>
                        <div class="login-input-wrapper">
                            <svg class="login-input-icon login-icon" viewBox="0 0 24 24">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                <polyline points="22,6 12,13 2,6" />
                            </svg>
                            <input asp-for="Email" type="email" class="login-input" placeholder="ornek@email.com" />
                        </div>
                        <div class="login-error-message" id="emailError" style="display: none;">
                            <svg class="login-error-icon login-icon" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10" />
                                <line x1="12" y1="8" x2="12" y2="12" />
                                <line x1="12" y1="16" x2="12.01" y2="16" />
                            </svg>
                            <span id="emailErrorText">Geçerli bir e-posta adresi girin</span>
                        </div>
                        <span asp-validation-for="Email" class="text-error"></span>
                    </div>

                    <!-- Password -->
                    <div class="login-form-group">
                        <label asp-for="Password">Şifre <span class="required">*</span></label>
                        <div class="login-input-wrapper">
                            <svg class="login-input-icon login-icon" viewBox="0 0 24 24">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                            </svg>
                            <input asp-for="Password" type="password" class="login-input" placeholder="••••••••" />
                            <button type="button" class="login-toggle-password" id="togglePassword">
                                <svg class="login-icon" id="eyeIcon" viewBox="0 0 24 24">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                            </button>
                        </div>
                        <div class="login-error-message" id="passwordError" style="display: none;">
                            <svg class="login-error-icon login-icon" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10" />
                                <line x1="12" y1="8" x2="12" y2="12" />
                                <line x1="12" y1="16" x2="12.01" y2="16" />
                            </svg>
                            <span id="passwordErrorText">Şifre en az 8 karakter olmalıdır</span>
                        </div>
                        <span asp-validation-for="Password" class="text-error"></span>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="login-form-options">
                        <label class="login-remember-me">
                            <div class="login-checkbox-wrapper">
                                <input asp-for="RememberMe" type="checkbox" class="login-checkbox" />
                            </div>
                            <span class="login-remember-label">Beni Hatırla</span>
                        </label>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="login-forgot-password">Şifremi Unuttum</a>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="login-button" id="loginButton">
                        <span class="login-button-content">
                            <span id="buttonText">Giriş Yap</span>
                        </span>
                    </button>

                    <!-- Divider -->
                    <div class="login-divider">veya</div>

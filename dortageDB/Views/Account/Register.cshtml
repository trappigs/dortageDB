@model dortageDB.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label">Ad *</label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label">Soyad *</label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta *</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Telefon *</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="5XX XXX XX XX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sehir" class="form-label">Şehir *</label>
                            <input asp-for="Sehir" class="form-control" />
                            <span asp-validation-for="Sehir" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre *</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cinsiyet</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="Cinsiyet" type="radio" value="false" class="form-check-input" id="cinsiyetKadin" />
                                    <label class="form-check-label" for="cinsiyetKadin">Kadın</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="Cinsiyet" type="radio" value="true" class="form-check-input" id="cinsiyetErkek" checked />
                                    <label class="form-check-label" for="cinsiyetErkek">Erkek</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="TopraktarMi" type="checkbox" class="form-check-input" checked />
                                <label asp-for="TopraktarMi" class="form-check-label">
                                    Topraktar olarak kaydol
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Kvkk" type="checkbox" class="form-check-input" required />
                                <label asp-for="Kvkk" class="form-check-label">
                                    KVKK metnini okudum ve kabul ediyorum *
                                </label>
                                <span asp-validation-for="Kvkk" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Pazarlama" type="checkbox" class="form-check-input" />
                                <label asp-for="Pazarlama" class="form-check-label">
                                    Pazarlama iletişimi almak istiyorum
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="mb-0">Zaten hesabınız var mı? <a asp-action="Login">Giriş yapın</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
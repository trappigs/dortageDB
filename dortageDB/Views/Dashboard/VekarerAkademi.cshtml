                            </div>
                            <div class="meta-item">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                </svg>
                                @kategoriAdi
                            </div>
                        </div>
                        <button onclick="openVideoModal('@oneCikan.YoutubeVideoID')" class="btn-watch">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <polygon points="5 3 19 12 5 21 5 3"></polygon>
                            </svg>
                            Þimdi Ýzle
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Filtreler -->
        <div class="filter-section">
            <div class="category-tabs">
                <button class="category-tab active" data-category="all">
                    Tümü (@ViewBag.ToplamCount)
                </button>
                <button class="category-tab" data-category="baslangic">
                    ?? Baþlangýç (@ViewBag.BaslangicCount)
                </button>
                <button class="category-tab" data-category="satis">
                    ?? Satýþ Teknikleri (@ViewBag.SatisCount)
                </button>
                <button class="category-tab" data-category="arsa">
                    ??? Arsa Bilgisi (@ViewBag.ArsaCount)
                </button>
                <button class="category-tab" data-category="musteri">
                    ?? Müþteri Ýliþkileri (@ViewBag.MusteriCount)
                </button>
                <button class="category-tab" data-category="pazarlama">
                    ?? Dijital Pazarlama (@ViewBag.PazarlamaCount)
                </button>
                <button class="category-tab" data-category="basari">
                    ? Baþarý Hikayeleri (@ViewBag.BasariCount)
                </button>
            </div>
            <div class="search-box">
                <input type="text" placeholder="Eðitim ara..." id="searchInput">
                <svg class="search-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </div>
        </div>

        <!-- Eðitim Kartlarý -->
        <div class="courses-grid" id="coursesGrid">
            @if (ViewBag.Videolar != null)
            {
                @foreach (var video in ViewBag.Videolar as List<dortageDB.Entities.EgitimVideo>)
                {
                    var kategoriAdi = dortageDB.Entities.EgitimKategorileri.GetAll()
                        .FirstOrDefault(k => k.Key == video.Kategori).Value ?? video.Kategori;

                    <div class="course-card" data-category="@video.Kategori">
                        <div class="course-thumbnail" style="background-image: url('https://img.youtube.com/vi/@video.YoutubeVideoID/maxresdefault.jpg');" onclick="openVideoModal('@video.YoutubeVideoID')">
                            <div class="play-button">?</div>
                            <div class="course-duration">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                @video.Sure
                            </div>
                            @if (video.Yeni)
                            {
                                <div class="course-badge badge-new">Yeni</div>
                            }
                            else if (video.Populer)
                            {
                                <div class="course-badge badge-popular">Popüler</div>
                            }
                        </div>
                        <div class="course-content">
                            <div class="course-category">@kategoriAdi</div>
                            <h3 class="course-title">@video.Baslik</h3>
                            <p class="course-description">
                                @video.Aciklama
                            </p>
                            <div class="course-meta">
                                <div class="meta-item">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    @video.IzlenmeSayisi
                                </div>
                                <div class="meta-item" style="cursor: pointer;" onclick="openVideoModal('@video.YoutubeVideoID')">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <polygon points="5 3 19 12 5 21 5 3"></polygon>
                                    </svg>
                                    Ýzle
                                </div>
                            </div>
                            <button class="btn-complete" data-video-id="@video.YoutubeVideoID" onclick="toggleComplete('@video.YoutubeVideoID', event)">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span class="btn-complete-text">Tamamladým</span>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <div class="empty-icon">??</div>
                    <h3>Henüz video eklenmemiþ</h3>
                    <p>Yakýnda eðitim videolarý eklenecektir</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Video Modal -->
<div class="video-modal" id="videoModal">
    <div class="video-modal-content">
        <button class="video-modal-close" onclick="closeVideoModal()">×</button>
        <iframe class="video-modal-iframe" id="videoIframe" src="" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
</div>

<script>
    function openVideoModal(videoId) {
        const modal = document.getElementById('videoModal');
        const iframe = document.getElementById('videoIframe');
        iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeVideoModal() {
        const modal = document.getElementById('videoModal');
        const iframe = document.getElementById('videoIframe');
        modal.classList.remove('active');
        iframe.src = '';
        document.body.style.overflow = '';
    }

    // Close modal on background click
    document.getElementById('videoModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeVideoModal();
        }
    });

    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeVideoModal();
        }
    });
</script>

<script>
    // Kategori filtreleme
    const categoryTabs = document.querySelectorAll('.category-tab');
    const courseCards = document.querySelectorAll('.course-card');

    categoryTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const category = this.getAttribute('data-category');

            // Aktif tab deðiþtir
            categoryTabs.forEach(t => t.classList.remove('active'));
            this.classList.add('active');

            // Kurslarý filtrele
            courseCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                if (category === 'all' || cardCategory === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });

    // Arama fonksiyonu
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();

        courseCards.forEach(card => {
            const title = card.querySelector('.course-title').textContent.toLowerCase();
            const description = card.querySelector('.course-description').textContent.toLowerCase();

            if (title.includes(searchTerm) || description.includes(searchTerm)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    });

    // Tamamlanan videolarý localStorage'dan yükle
    function loadCompletedVideos() {
        const completed = JSON.parse(localStorage.getItem('completedVideos') || '[]');
        completed.forEach(videoId => {
            const button = document.querySelector(`[data-video-id="${videoId}"]`);
            if (button) {
                button.classList.add('completed');
                button.querySelector('.btn-complete-text').textContent = 'Tamamlandý';
            }
        });
        updateCompletedCount();
    }

    // Video tamamlama durumunu deðiþtir
    function toggleComplete(videoId, event) {
        event.stopPropagation();
        const button = event.currentTarget;
        const completed = JSON.parse(localStorage.getItem('completedVideos') || '[]');
        const index = completed.indexOf(videoId);

        if (index === -1) {
            // Videoyu tamamlanmýþ olarak iþaretle
            completed.push(videoId);
            button.classList.add('completed');
            button.querySelector('.btn-complete-text').textContent = 'Tamamlandý';
        } else {
            // Tamamlanmýþ iþaretini kaldýr
            completed.splice(index, 1);
            button.classList.remove('completed');
            button.querySelector('.btn-complete-text').textContent = 'Tamamladým';
        }

        localStorage.setItem('completedVideos', JSON.stringify(completed));
        updateCompletedCount();
    }

    // Tamamlanan video sayýsýný güncelle
    function updateCompletedCount() {
        const completed = JSON.parse(localStorage.getItem('completedVideos') || '[]');
        const countElement = document.querySelector('.stat-item:nth-child(3) .stat-value');
        if (countElement) {
            countElement.textContent = completed.length;
        }
    }

    // Sayfa yüklendiðinde tamamlanan videolarý yükle
    document.addEventListener('DOMContentLoaded', () => {
        loadCompletedVideos();
    });

    console.log('Vekarer Akademi loaded successfully!');
</script>

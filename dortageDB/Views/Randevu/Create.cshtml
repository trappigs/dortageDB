<script>
    // Quick time setter
    function setQuickTime(days, hour = 10) {
        const input = document.getElementById('randevuZamanInput');
        const date = new Date();
        date.setDate(date.getDate() + days);
        date.setHours(hour);
        date.setMinutes(0);
        date.setSeconds(0);

        // Format for datetime-local input
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        const hours = String(date.getHours()).padStart(2, '0');
        const minutes = String(date.getMinutes()).padStart(2, '0');

        input.value = `${year}-${month}-${day}T${hours}:${minutes}`;
    }

    // Set minimum date to today
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('randevuZamanInput');
        if (input && !input.value) {
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            input.min = now.toISOString().slice(0, 16);
        }

        // Yeni Müşteri Toggle
        const yeniMusteriCheckbox = document.getElementById('yeniMusteriCheckbox');
        const mevcutMusteriSection = document.getElementById('mevcutMusteriSection');
        const yeniMusteriSection = document.getElementById('yeniMusteriSection');
        const musteriSelect = document.querySelector('select[name="MusteriId"]');

        if (yeniMusteriCheckbox) {
            yeniMusteriCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    mevcutMusteriSection.style.display = 'none';
                    yeniMusteriSection.style.display = 'block';
                    musteriSelect.value = ''; // Mevcut müşteri seçimini temizle
                } else {
                    mevcutMusteriSection.style.display = 'block';
                    yeniMusteriSection.style.display = 'none';
                }
            });
        }
    });
</script>
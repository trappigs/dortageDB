@model Randevu

@{
    ViewData["Title"] = "Randevu Detayları";
    Layout = "_LayoutTopraktar";
    var isAdmin = User.IsInRole("admin");
}

<link rel="stylesheet" href="~/css/topraktar-main-panel.css" asp-append-version="true" />

<style>
    .details-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .details-header {
        background: white;
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .randevu-status {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-confirmed {
        background: #dbeafe;
        color: #1e40af;
    }

    .status-completed {
        background: #d1fae5;
        color: #065f46;
    }

    .status-cancelled {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-no_show {
        background: #f3f4f6;
        color: #4b5563;
    }

    .randevu-title {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 12px;
    }

    .randevu-datetime {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 18px;
        color: #6b7280;
        margin-bottom: 24px;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: #000a68;
        color: white;
    }

        .btn-primary:hover {
            background: #001a88;
            transform: translateY(-2px);
        }

    .btn-success {
        background: #10b981;
        color: white;
    }

        .btn-success:hover {
            background: #059669;
        }

    .btn-danger {
        background: #fee2e2;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

        .btn-danger:hover {
            background: #fecaca;
        }

    .admin-only-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        background: rgba(255, 255, 255, 0.3);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 10px;
        font-weight: 700;
    }

    .admin-info-box {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 16px;
        font-size: 13px;
        color: #991b1b;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }

    .info-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

        .info-card h2 {
            font-size: 18px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f3f4f6;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        color: #6b7280;
        font-size: 14px;
    }

    .info-value {
        color: #1f2937;
        font-size: 14px;
        text-align: right;
    }

    .map-card {
        grid-column: 1 / -1;
    }

    @@media (max-width: 768px) {
        .details-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="topraktar-main-panel">
    <div class="main-content">
        <div class="details-container">
            <div class="details-header">
                <span class="randevu-status status-@Model.RandevuDurum.ToString()">
                    @switch (Model.RandevuDurum)
                    {
                        case RandevuDurum.OnayBekliyor:
                            <text>⏳ Bekliyor</text>
                            break;
                        case RandevuDurum.GorusmeBekleniyor:
                            <text>✓ Onaylandı</text>
                            break;
                        case RandevuDurum.OdemeAlindi:
                            <text>✓ Tamamlandı</text>
                            break;
                        case RandevuDurum.Iptal:
                            <text>✗ İptal Edildi</text>
                            break;
                        case RandevuDurum.Gerceklesmedi:
                            <text>⊘ Gelmedi</text>
                            break;
                    }
                </span>

                <h1 class="randevu-title">@Model.RandevuTipi Randevusu</h1>

                <div class="randevu-datetime">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    @Model.RandevuZaman.ToString("dd MMMM yyyy, HH:mm")
                </div>

                @* SADECE ADMIN İÇİN BİLGİ KUTUSU *@
                @if (!User.IsInRole("admin"))
                {
                    <div class="admin-info-box">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16"></line>
                        </svg>
                        Randevu durumu değişiklikleri için lütfen Dortage Yönetim Ekibi ile iletişime geçin.
                    </div>
                }

                <div class="action-buttons">
                    @* SADECE ADMIN durum değiştirebilir *@
                    @if (User.IsInRole("admin"))
                    {
                        @if (Model.RandevuDurum == RandevuDurum.OnayBekliyor)
                        {
                            <form asp-action="UpdateStatus" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.RandevuID" />
                                <input type="hidden" name="status" value="GorusmeBekleniyor" />
                                <button type="submit" class="btn btn-success">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Onayla
                                    <span class="admin-only-badge">ADMIN</span>
                                </button>
                            </form>
                        }
                        @if (Model.RandevuDurum == RandevuDurum.GorusmeBekleniyor)
                        {
                            <form asp-action="UpdateStatus" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.RandevuID" />
                                <input type="hidden" name="status" value="OdemeAlindi" />
                                <button type="submit" class="btn btn-success">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Tamamla
                                    <span class="admin-only-badge">ADMIN</span>
                                </button>
                            </form>
                        }
                    }

                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.RandevuID" class="btn btn-primary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.RandevuID" class="btn btn-danger">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Sil
                        </a>
                    }
                </div>
            </div>

            <div class="details-grid">
                <div class="info-card">
                    <h2>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                        </svg>
                        Müşteri Bilgileri
                    </h2>
                    <div class="info-row">
                        <span class="info-label">Ad Soyad:</span>
                        <span class="info-value">
                            <a asp-controller="Musteri" asp-action="Details" asp-route-id="@Model.Musteri.IdMusteri"
                               style="color: #000a68; text-decoration: none; font-weight: 600;">
                                @Model.Musteri.Ad @Model.Musteri.Soyad
                            </a>
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Telefon:</span>
                        <span class="info-value">@Model.Musteri.Telefon</span>
                    </div>
                </div>

                <div class="info-card">
                    <h2>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        Topraktar Bilgileri
                    </h2>
                    <div class="info-row">
                        <span class="info-label">Ad Soyad:</span>
                        <span class="info-value">@Model.Topraktar.Ad @Model.Topraktar.Soyad</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">E-posta:</span>
                        <span class="info-value">@Model.Topraktar.Email</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Telefon:</span>
                        <span class="info-value">@Model.Topraktar.PhoneNumber</span>
                    </div>
                </div>

                <div class="info-card map-card">
                    <h2>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        Randevu Bilgileri
                    </h2>
                    <div class="info-row">
                        <span class="info-label">Randevu Tipi:</span>
                        <span class="info-value">@Model.RandevuTipi</span>
                    </div>
                </div>
            </div>

            <div style="text-align: center; margin-top: 24px;">
                <a asp-action="Index" class="btn" style="background: #f3f4f6; color: #374151;">
                    ← Randevu Listesine Dön
                </a>
            </div>
        </div>
    </div>
</div>
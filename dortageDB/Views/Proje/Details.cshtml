                <!-- Benzer Projeler -->
                <div class="similar-projects">
                    <h3 class="card-title">Benzer Projeler</h3>
                    <p class="card-subtitle">Bu projeye benzer diğer fırsatlar</p>
                    <a asp-action="Index" asp-route-sehir="@Model.Sehir" class="btn btn-outline btn-block">
                        @Model.Sehir'deki Tüm Projeler
                    </a>
                </div>
            </div>
            <!-- 360 Derece Sanal Tur -->
            @if (!string.IsNullOrEmpty(Model.Tour360Url))
            {
                <div class="detail-360-tour" data-aos="fade-up" data-aos-delay="200">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 28px; height: 28px; margin-right: 8px;">
                            <circle cx="12" cy="12" r="10" />
                            <path d="M2 12h20" />
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                        </svg>
                        360° Sanal Tur
                    </h2>
                    <div class="tour-360-container">
                        <div class="tour-360-wrapper">
                            @{
                                string tourSrc = Model.Tour360Url;
                                // Eğer http ile başlamıyorsa, turlar klasöründen yükle
                                if (!tourSrc.StartsWith("http"))
                                {
                                    tourSrc = $"/turlar/{tourSrc}/index.html";
                                }
                            }
                            <iframe src="@tourSrc"
                                    class="tour-360-iframe"
                                    allowfullscreen
                                    allow="accelerometer; gyroscope; vr">
                            </iframe>
                        </div>
                        <button class="tour-fullscreen-btn" onclick="openTourFullscreen()">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3" />
                            </svg>
                            Tam Ekran
                        </button>
                    </div>
                </div>
            }



            <!-- Yakınlık Bilgileri Section -->
            @if (!string.IsNullOrEmpty(Model.YakinProjeler) || !string.IsNullOrEmpty(Model.YakinBolgeler) ||
                        !string.IsNullOrEmpty(Model.UlasimBilgileri) || !string.IsNullOrEmpty(Model.SosyalTesisler))
            {
                <div class="detail-proximity" data-aos="fade-up" data-aos-delay="300">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 28px; height: 28px; margin-right: 8px;">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                            <circle cx="12" cy="10" r="3" />
                        </svg>
                        Konum ve Yakınlık Bilgileri
                    </h2>

                    <div class="row g-4">
                        @if (!string.IsNullOrEmpty(Model.YakinBolgeler))
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="deger-card">
                                    <div class="deger-icon">
                                        <i class="fa fa-map-marker-alt"></i>
                                    </div>
                                    <h3 class="deger-title">Önemli Bölgelere Yakınlık</h3>
                                    <ul class="deger-list">
                                        @foreach (var item in Model.YakinBolgeler.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@item.Trim()</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.UlasimBilgileri))
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="deger-card">
                                    <div class="deger-icon">
                                        <i class="fa fa-bus"></i>
                                    </div>
                                    <h3 class="deger-title">Ulaşım</h3>
                                    <ul class="deger-list">
                                        @foreach (var item in Model.UlasimBilgileri.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@item.Trim()</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SosyalTesisler))
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="deger-card">
                                    <div class="deger-icon">
                                        <i class="fa fa-building"></i>
                                    </div>
                                    <h3 class="deger-title">Sosyal Tesisler</h3>
                                    <ul class="deger-list">
                                        @foreach (var item in Model.SosyalTesisler.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@item.Trim()</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.YakinProjeler))
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="deger-card">
                                    <div class="deger-icon">
                                        <i class="fa fa-project-diagram"></i>
                                    </div>
                                    <h3 class="deger-title">Yakın Projeler</h3>
                                    <ul class="deger-list">
                                        @foreach (var item in Model.YakinProjeler.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <li>@item.Trim()</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Proje Sunumu İndir -->
            @if (!string.IsNullOrEmpty(Model.SunumDosyaUrl))
            {
                <div class="detail-presentation" data-aos="fade-up" data-aos-delay="250">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 28px; height: 28px; margin-right: 8px;">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                            <polyline points="14 2 14 8 20 8" />
                            <line x1="16" y1="13" x2="8" y2="13" />
                            <line x1="16" y1="17" x2="8" y2="17" />
                            <polyline points="10 9 9 9 8 9" />
                        </svg>
                        Proje Sunumu
                    </h2>
                    <div class="presentation-box">
                        <div class="presentation-icon">
                            @{
                                var sunumExtension = System.IO.Path.GetExtension(Model.SunumDosyaUrl).ToLowerInvariant();
                                var isPdf = sunumExtension == ".pdf";
                            }
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                @if (isPdf)
                                {
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                    <polyline points="14 2 14 8 20 8" />
                                    <line x1="9" y1="13" x2="15" y2="13" />
                                    <line x1="9" y1="17" x2="15" y2="17" />
                                }
                                else
                                {

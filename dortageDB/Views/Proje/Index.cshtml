@model IEnumerable<dortageDB.Entities.Proje>
@{
    ViewData["Title"] = "Projelerimiz";
    Layout = "_LayoutFullWidth";
}

<!-- Font Awesome için CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Mobil overflow fix */
    @@media (max-width: 768px) {
        html, body {
            overflow-x: hidden !important;
            width: 100%;
            max-width: 100vw;
            position: relative;
        }

        /* Fix navbar width on mobile - prevents horizontal scroll */
        .nav-menus .navbar {
            max-width: calc(100vw - 32px) !important;
            left: 16px !important;
            right: 16px !important;
            box-sizing: border-box;
        }

        .page-title-section,
        .filtre-section,
        .projeler-grid-section {
            overflow-x: hidden;
            max-width: 100vw;
        }

        .container {
            max-width: 100%;
            padding-left: 15px;
            padding-right: 15px;
            overflow-x: hidden;
            box-sizing: border-box;
        }
    }
</style>

<!-- Page Title -->
<div class="page-title-section">
    <div class="container">
        <h1 class="page-title">VEKARER PORTFÖYÜ</h1>
        <p class="page-subtitle">Hayalinizdeki gayrimenkul yatırımı burada başlıyor</p>
    </div>
</div>

<!-- Filtre Bölümü -->
<section class="filtre-section">
    <div class="container">
        <div class="filtre-container">
            <div class="filtre-content">
                <form method="get" asp-action="Index" id="filterForm">
                    <div class="filtre-grid">
                        <!-- Yatırım Türü -->
                        <div class="filtre-group">
                            <label class="filtre-label">
                                <i class="fas fa-building"></i>
                                Yatırım Türü
                            </label>
                            <select name="yatirimTuru" class="filtre-select">
                                <option value="">Tümü</option>
                                <option value="Arsa" selected="@(ViewBag.YatirimTuru == "Arsa")">Arsa</option>
                                <option value="Konut" selected="@(ViewBag.YatirimTuru == "Konut")">Konut</option>
                            </select>
                        </div>

                        <!-- Bölge -->
                        <div class="filtre-group">
                            <label class="filtre-label">
                                <i class="fas fa-map-marker-alt"></i>
                                Bölge
                            </label>
                            <select name="sehir" class="filtre-select">
                                <option value="">Tüm Bölgeler</option>
                                @foreach (var sehir in ViewBag.Sehirler as List<string>)
                                {
                                    <option value="@sehir" selected="@(ViewBag.SelectedSehir == sehir)">@sehir</option>
                                }
                            </select>
                        </div>

                        <!-- Maximum Bütçe -->
                        <div class="filtre-group">
                            <label class="filtre-label">
                                <i class="fas fa-coins"></i>
                                Bütçe (₺)
                            </label>
                            <input type="number" name="maxFiyat" class="filtre-input" placeholder="Maksimum bütçe" value="@ViewBag.MaxFiyat" step="10000" min="0">
                        </div>

                        <!-- Taksit İmkanı -->
                        <div class="filtre-group filtre-checkbox-group">
                            <label class="filtre-checkbox-label" style="margin-bottom: 0px">
                                <input type="checkbox" name="taksit" value="true" class="filtre-checkbox" @(ViewBag.Taksit == true ? "checked" : "")>
                                <span class="checkbox-icon">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span class="checkbox-text">
                                    <i class="fas fa-credit-card"></i>
                                    Taksit Seçeneği
                                </span>
                            </label>
                        </div>

                        <!-- Takas İmkanı -->
                        <div class="filtre-group filtre-checkbox-group">
                            <label class="filtre-checkbox-label" style="margin-bottom: 0px">
                                <input type="checkbox" name="takas" value="true" class="filtre-checkbox" @(ViewBag.Takas == true ? "checked" : "")>
                                <span class="checkbox-icon">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span class="checkbox-text">
                                    <i class="fas fa-exchange-alt"></i>
                                    Takas Seçeneği
                                </span>
                            </label>
                        </div>

                        <!-- Filtre Butonları -->
                        <div class="filtre-actions-inline">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                                Filtrele
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-redo"></i>
                                Temizle
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Projeler Grid -->
<section class="projeler-grid-section">
    <div class="container">
        @if (!Model.Any())
        {
            <div class="empty-state">
                <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <h3>Kriterlere Uygun Proje Bulunamadı</h3>
                <p>Lütfen filtrelerinizi değiştirerek tekrar deneyin.</p>
                <a asp-action="Index" class="btn btn-primary">Tüm Projeleri Görüntüle</a>
            </div>
        }
        else
        {
            <div class="projects-grid">
                @foreach (var proje in Model)
                {
                    <div class="project-card">

                        @* YENİ Badge - Kağıt köşesi *@
                        @if (proje.YeniBadge)
                        {
                            <div class="paper-corner-badge"></div>
                        }

                        @* Yatırım Türü Badge *@
                        @if (!string.IsNullOrEmpty(proje.YatirimTuru))
                        {
                            if (proje.YatirimTuru == "Konut")
                            {
                                <div class="yatirim-badge">
                                    <i class="fas fa-star"></i>
                                    <span>KONUT</span>
                                </div>
                            }
                            else
                            {
                                <div class="yatirim-badge arsa-beyaz">
                                    <i class="fas fa-star" style="color:#000a68"></i>
                                    <span style="color: #000a68">ARSA</span>
                                </div>
                            }
                        }

                        <div class="card-header">
                            <h3 class="card-title">@proje.ProjeAdi</h3>
                        </div>

                        <a href="@Url.Action("Details", "Proje", new { id = proje.ProjeID })" title="@proje.ProjeAdi Detayları" class="card-image-container">
                            @if (!string.IsNullOrEmpty(proje.KapakGorseli))
                            {
                                <img src="@proje.KapakGorseli" alt="@proje.ProjeAdi">
                            }
                            else
                            {
                                <img src="/images/placeholder-project.jpg" alt="@proje.ProjeAdi">
                            }

                            <div class="card-description-overlay">
                                <p>@(!string.IsNullOrEmpty(proje.KisaAciklama) ? proje.KisaAciklama : (!string.IsNullOrEmpty(proje.Aciklama) ? proje.Aciklama : "Daha fazla bilgi için projeyi inceleyiniz."))</p>
                            </div>
                        </a>

                        <div class="card-footer">
                            <div class="location-info">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@proje.Konum</span>
                            </div>
                            <div class="location-info">
                                <i class="fa-solid fa-turkish-lira-sign"></i>
                                    <span>@proje.MinFiyat.ToString("N0")'den başlayan fiyatlarla</span></div>
                            <div class="card-actions">
                                <a href="@Url.Action("Details", "Proje", new { id = proje.ProjeID })" title="@proje.ProjeAdi Detayları" class="btn btn-primary">PROJEYİ İNCELE</a>
                                @* <a href="#" class="btn btn-secondary">FORM DOLDURUN</a> *@
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="~/css/projeler.css" asp-append-version="true" />

    <script>
        // Filtre her zaman açık - herhangi bir toggle işlevi yok
        document.addEventListener('DOMContentLoaded', function() {
            // Sayfa yüklendiğinde herhangi bir aktif filtre varsa odaklan
            const hasActiveFilters = @((ViewBag.YatirimTuru != null || ViewBag.SelectedSehir != null || ViewBag.MinFiyat != null || ViewBag.MaxFiyat != null || ViewBag.Taksit != null || ViewBag.Takas != null) ? "true" : "false");

            if (hasActiveFilters) {
                // Aktif filtreleri vurgula (isteğe bağlı)
                const filterSection = document.querySelector('.filtre-section');
                if (filterSection) {
                    filterSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            }
        });
    </script>
}

@section Scripts {
    <link rel="stylesheet" href="~/css/topraktar-nedir.css" asp-append-version="true" />

    <script>
        // Komisyon Hesaplama
        const satisFiyatiInput = document.getElementById('satisFiyati');
        const komisyonTutarElement = document.getElementById('komisyonTutar');

        satisFiyatiInput.addEventListener('input', function() {
            const fiyat = parseFloat(this.value) || 0;
            const komisyon = fiyat * 0.03;
            komisyonTutarElement.textContent = '₺' + komisyon.toLocaleString('tr-TR', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            });
        });
    </script>
}
